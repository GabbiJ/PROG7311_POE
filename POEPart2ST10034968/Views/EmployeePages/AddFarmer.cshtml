@{
    ViewData["Title"] = "Add Farmer";
}

<div class="text-center">
    <br />
    <h1 class="display-4">Add a Farmer</h1>
    <br />
    <form asp-action="AddFarmer" method="post">
        <h2>Email Address</h2>
        <div class="form-floating mb-3">
            <input type="email" name="txtEmail" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <br />

        <h2>Password</h2>
        <div class="form-floating mb-3">
            <input type="password" name="txtPass"  class="form-control" id="floatingInput" placeholder="Password">
            <label for="floatingInput">Password</label>
        </div>
        <br />

        <h2>First Name</h2>
        <div class="form-floating mb-3">
            <input type="text" name="txtFName" class="form-control" id="floatingInput" placeholder="John">
            <label for="floatingInput">First Name</label>
        </div>
        <br/>

        <h2>Surname</h2>
        <div class="form-floating mb-3">
            <input type="text" name="txtSurname" class="form-control" id="floatingInput" placeholder="Smith">
            <label for="floatingInput">Surname</label>
        </div>
        <br />
        <br />
        <div class="text-center">
            <h4 class="text-danger" name="txtError">@ViewBag.ErrorMessage</h4>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
    </form>

</div>
